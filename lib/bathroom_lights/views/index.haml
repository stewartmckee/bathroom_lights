.jumbotron
  %h1 Bathroom Lights
  %br
  %a.btn.btn-large.btn-success.on Turn On
  %a.btn.btn-large.btn-success.off Turn Off

  :javascript

    $(".btn").click(function(e) {
      e.preventDefault();
      var url = ""
      if ($(this).hasClass("on")) {
        url = "/on"
      } else {
        url = "/off"
      }

      $.ajax( {
        type: "GET",
        url: url,
        success:  function() {
          console.log("success")
        }
      })

    })
